<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexViewer101.PdfBrowser"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true"
             xmlns:c1="http://schemas.grapecity.com/xf/2019/xaml">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnSave" Clicked="OnOpen" Order="Primary" Priority="0">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value = "Assets/AppBar/open.png" />
                    <On Platform="Android" Value = "ic_action_open.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <c1:FlexViewer x:Name="flexViewer" />
</ContentPage>