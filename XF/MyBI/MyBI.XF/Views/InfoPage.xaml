<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBI.Views.InfoPage">
    <ContentPage.Content>
        <StackLayout Padding = "20" Spacing="40">
            <Label x:Name="MyBILabel" Text="MyBI" FontSize="Large" VerticalOptions= "Center" FontAttributes="Bold" HorizontalOptions="Center" />
            <Label x:Name="aboutLabel" FontSize="Medium" VerticalOptions= "Center" HorizontalOptions="Center" />
            <Label x:Name="powerByLabel" FontSize="Small" VerticalOptions= "Center" TextColor="Blue" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>